    //}@
    public Patient pat = new Patient("Ryan", "Sheikh", "10-02-03", "F", "TB", "7585991063");

    public void NavigateToEditPatient(Patient patient)
    {
        NavManager.NavigateTo($"/EditPatient/{patient.FName}/{patient.LName}/{patient.DOB}/{patient.Gender}/{patient.Disease}/{patient.Contact}");
    }
}
