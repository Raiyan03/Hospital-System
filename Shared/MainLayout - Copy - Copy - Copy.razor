@inherits LayoutComponentBase
@inject NavigationManager NavManager
<div class="page">
	<div class="sidebar">
		<NavMenu />
	</div>

	<main>
		<div class="top-row px-4">
			<a href="javascript:void(0);" @onclick="NavigateToViewPatient">View Patient</a>
			<a href="javascript:void(0);" @onclick="NavigateTonewPatient">New Patient</a>
		</div>

		<article class="content px-4">
			@Body
		</article>
	</main>
</div>

@code
{
	public void NavigateTonewPatient()
	{
		NavManager.NavigateTo("/NewPatient");
	}
	public void NavigateToViewPatient()
	{
		NavManager.NavigateTo("/fetchdata");
	}
}